// ======================
// Variables
// ======================
contentWidth = 700px
panelSize = 168px
 
// Grey
greyBkgColor = #eee
greyTextColor = #89867e

// Red


// Green


// Yellow


// ======================
// Base Styles
// ======================
html, body 
    margin 0
    padding 0
    font-family "Raleway", sans-serif
    font-size 100%

p  
    margin 0 0 20px 0

h1 
    font-size 72px

h2 
    font-size 48px
    margin-bottom 10px

h3 
    margin-top 5px
    margin-bottom 5px

a 
    text-decoration none

.sub-heading
    opacity 0.5
    font-size 24px

.content 
    width contentWidth
    margin auto

.sub-link
    font-size 36px

// ======================
// Themes
// ======================
.greyTheme
    background-color greyBkgColor
    color greyTextColor

    a
        color #66f
    a:hover
        color #99f


// ======================
// Specific Styles
// ======================
.presence .icon 
    display inline-block

.icon 
    padding 20px
    height 128px
    width 128px
    background-color #aaf
    overflow hidden
    color white

.panel
    h1
        font-size 18px
        font-weight bold
        margin 0
        padding 0
    a 
        color #ccc
    a:hover
        color white

.commit 
    font-style italic

.push-down  
    margin-top 75px 

.text-center  
    text-align center 

.blue  
    background-color #62B8E3 

.blue-dark  
    background-color #4994BA 

.navy  
    background-color #1B6D96 

.navy-dark  
    background-color #124C69 

.grey  
    background-color #bbb 

.grey-dark  
    background-color #888 


// ======================
// Panels
// ======================
.panel 
    display inline-block
    width panelSize
    height panelSize
    overflow-y hidden
    font-size 14px
    margin 10px

    .half
        width panelSize
        height panelSize

    .contents
        transition all 0.3s ease-in-out

    .contents:hover
        position relative
        transform translate(0, -1 * panelSize)
